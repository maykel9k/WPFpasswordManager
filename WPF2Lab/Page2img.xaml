<Page x:Class="WPF2Lab.Page2img"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF2Lab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2img"
      x:Name="Page2img_id">

    <Grid>
        <Image  x:Name="TopSecretImage" Source="Resources/TopSecret.png"
                Width="{Binding ElementName=Page2img_id, Path=Height, Mode=OneWay}"
                Height="{Binding ElementName=Page2img_id, Path=Height, Mode=OneWay}"/>
    </Grid>
</Page>
